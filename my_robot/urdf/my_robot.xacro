<?xml version='1.0'?>

<robot name="my_robot" xmlns:xacro="http://www.ros.org/wiki/xacro">
    <xacro:include filename="$(find my_robot)/urdf/my_robot.gazebo" />

    <link name="robot_footprint"/>

    <link name="crossbar_main">
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="1e-2" ixy="0" ixz="0"
                iyy="1e-2" iyz="0"
                izz="1e-2"
            />
        </inertial>

        <collision name='crossbar_main_collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.5 0.1 0.05"/>
            </geometry>
        </collision>

        <visual name='crossbar_main_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.5 0.1 0.049"/>
            </geometry>
        </visual>

        <collision name='caster_collision'>
            <origin xyz="-0.25 0 -0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.049"/>
            </geometry>
        </collision>

        <visual name='caster_visual'>
            <origin xyz="-0.25 0 -0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.049"/>
            </geometry>
        </visual>

        <collision name='caster_collision_fw'>
            <origin xyz="0.24 0 -0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.049"/>
            </geometry>
        </collision>

        <visual name='caster_visual_fw'>
            <origin xyz="0.20 0 -0.05" rpy=" 0 0 0"/>
            <geometry>
                <sphere radius="0.05"/>
            </geometry>
        </visual>

    </link>

    <joint name="ctc_joint" type="fixed">
        <origin xyz="0.1 0 0" rpy="0 0 0"/>
        <parent link="robot_footprint"/>
        <child link="crossbar_trans_center"/>
    </joint>

    <joint name="cm_joint" type="fixed">
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <parent link="crossbar_trans_center"/>
        <child link="crossbar_main"/>
    </joint>

    <link name="crossbar_trans_forward">
        <inertial>
            <mass value="0.5"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="1e-2" ixy="0" ixz="0"
                iyy="1e-2" iyz="0"
                izz="1e-2"
            />
        </inertial>

        <collision name='crossbar_trans_forward_collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.05 0.5 0.05"/>
            </geometry>
        </collision>

        <visual name='crossbar_trans_forward_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.05 0.5 0.05"/>
            </geometry>
        </visual>
    </link>

    <joint name="ctf_joint" type="fixed">
        <origin xyz="0.275 0 0" rpy="0 0 0"/>
        <parent link="robot_footprint"/>
        <child link="crossbar_trans_forward"/>
    </joint>

    <link name="crossbar_trans_center">
        <inertial>
            <mass value="5"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="1e-2" ixy="0" ixz="0"
                iyy="1e-2" iyz="0"
                izz="1e-2"
            />
        </inertial>
        <collision name='crossbar_trans_center_collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.05 0.4 0.05"/>
            </geometry>
        </collision>

        <visual name='crossbar_trans_center_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <box size="0.05 0.4 0.05"/>
            </geometry>
        </visual>
    </link>

    <link name="tail">
        <inertial>
            <mass value="0.25"/>
            <origin xyz="0.0 0 0" rpy=" 0 0 0"/>
            <inertia
                ixx="0.01" ixy="0" ixz="0"
                iyy="0.01" iyz="0"
                izz="0.01"
            />
        </inertial>
        <collision name='tail_collision'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <cylinder radius="0.15" length="0.15"/>
            </geometry>
        </collision>

        <visual name='tail_visual'>
            <origin xyz="0 0 0" rpy=" 0 0 0"/>
            <geometry>
                <cylinder radius="0.15" length="0.15"/>
            </geometry>
        </visual>
    </link>

    <joint name="tail_joint" type="fixed">
        <origin xyz="-0.25 0 0.05" rpy="0 0 0"/>
        <parent link="crossbar_main"/>
        <child link="tail"/>
    </joint>

    <link name="left_wheel">
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0"  iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>

        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        </visual>
    </link>

    <joint type="continuous" name="left_wheel_hinge">
        <origin xyz="0 0.225 0" rpy="0 0 0"/>
        <child link="left_wheel"/>
        <parent link="crossbar_trans_center"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>

    <link name="right_wheel">
        <collision>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        </collision>

        <inertial>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
            <mass value="0.5"/>
            <inertia ixx="0.1" ixy="0" ixz="0"  iyy="0.1" iyz="0" izz="0.1"/>
        </inertial>

        <visual>
            <geometry>
                <cylinder radius="0.1" length="0.05"/>
            </geometry>
            <origin xyz="0 0 0" rpy="1.5707 0 0"/>
        </visual>
    </link>

    <joint type="continuous" name="right_wheel_hinge">
        <origin xyz="0 -0.225 0" rpy="0 0 0"/>
        <child link="right_wheel"/>
        <parent link="crossbar_trans_center"/>
        <axis xyz="0 1 0" rpy="0 0 0"/>
        <limit effort="10000" velocity="1000"/>
        <dynamics damping="1.0" friction="1.0"/>
    </joint>
    
    <link name="camera">
        <inertial>
            <mass value="0.1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <box_inertia sizeX="0.05" sizeY="0.05" sizeZ="0.05" mass="0.1"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
        </inertial>
        <collision>
            <origin xyz="0 0 0" rpy="0 1.5707 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </collision>
        <visual>
            <origin xyz="0 0 0" rpy="0 1.5707 0"/>
            <geometry>
                <cylinder radius="0.025" length="0.05"/>
            </geometry>
        </visual>
    </link>

    <joint type="fixed" name="camera_joint">
        <origin xyz="0.15 0 0.1" rpy="0 0 0"/>
        <axis xyz="1 0 0"/>
        <parent link="tail"/>
        <child link="camera"/>
    </joint>

    <link name="camera_link_optical">
    </link>
  
    <joint name="camera_optical_joint" type="fixed">
        <origin xyz="0 0 0" rpy="-1.5707 0 -1.5707"/>
        <parent link="camera"/>
        <child link="camera_link_optical"/>
    </joint>

    <link name="hokuyo">
        <inertial>
        <mass value="1e-1"/>
            <origin xyz="0 0 0" rpy="0 0 0"/>
            <box_inertia sizeX="0.05" sizeY="0.05" sizeZ="0.05" mass="0.1"/>
            <inertia ixx="1e-6" ixy="0" ixz="0" iyy="1e-6" iyz="0" izz="1e-6"/>
            </inertial>
        <collision>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <box size="0.1 0.1 0.1"/>
        </geometry>
        </collision>
        <visual>
        <origin xyz="0 0 0" rpy="0 0 0"/>
        <geometry>
            <mesh filename="package://my_robot/meshes/hokuyo.dae"/>
        </geometry>
        </visual>
    </link>

     <joint type="fixed" name="hokuyo_joint">
        <origin xyz="0.275 0 0" rpy="0 0 0"/>
        <axis xyz="0 1 0"/>
        <parent link="crossbar_main"/>
        <child link="hokuyo"/>
    </joint>

    <gazebo reference="crossbar_main">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="crossbar_trans_forward">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="crossbar_trans_center">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="tail">
        <material>Gazebo/Red</material>
    </gazebo>

    <gazebo reference="right_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="left_wheel">
        <material>Gazebo/Black</material>
    </gazebo>

    <gazebo reference="camera">
        <material>Gazebo/Blue</material>
    </gazebo>

</robot>
